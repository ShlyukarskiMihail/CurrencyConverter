DROP DATABASE IF EXISTS currency_collector_db;
DROP USER IF EXISTS `user`@`%`;
CREATE DATABASE IF NOT EXISTS currency_collector_db CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
CREATE USER IF NOT EXISTS `user`@`%` IDENTIFIED WITH mysql_native_password BY '12345';
GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, DROP, REFERENCES, INDEX, ALTER, EXECUTE, CREATE VIEW, SHOW VIEW,
CREATE ROUTINE, ALTER ROUTINE, EVENT, TRIGGER ON `currency_collector_db`.* TO `user`@`%`;
FLUSH PRIVILEGES;